<div class="panel callout">
  <h1>Welcome to SnackOverflow!</h1>
  <p>The tastiest snack site since today.</p>
</div>

<table>
  <thead>
    <tr>
      <th width="40%">User</th>
      <th width="40%">Question</th>
      <th width="20%">Number of Answers</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <% user = question.user_id %>
      <% if user %>
        <tr>
          <td><%= image_tag user.gravatar %></td>
          <h3><td><%= link_to question.title, question_path(question)%></td></h3>
          <td><%= question.number_of_answers %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
