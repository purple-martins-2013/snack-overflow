<div class='row'>
  <%= form_tag :session, session_path %>
    <%= text_field_tag :username%>
    <%= password_field_tag :password%>
    <%= submit_tag "Login" %>
  <% end %>

  <%= form_for :session, url: {action: 'create'}, html: {class: "large-4 columns"} do |f| %>
    username: <%= f.text_field :username %>
    password: <%= f.password_field(:password) %>

    <%= f.submit "Login" %>
  <% end %>
</div>
